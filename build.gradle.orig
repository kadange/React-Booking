/*
 * This file was generated by the Gradle 'init' task.
 */

plugins {
    id 'java'
    id 'maven-publish'
}

repositories {
    mavenLocal()
    maven {
        url = 'http://repo.maven.apache.org'
    }

    maven {
        url = 'http://repo.maven.apache.org/maven2'
    }
}

dependencies {
    compile 'org.springframework.boot:spring-boot-starter:2.1.2.RELEASE'
    compile 'org.springframework.boot:spring-boot-starter-web:2.1.2.RELEASE'
    compile 'org.springframework.boot:spring-boot-devtools:2.1.2.RELEASE'
    compile 'org.hibernate:hibernate-core:5.4.1.Final'
    compile 'org.springframework.boot:spring-boot-starter-data-jpa:2.1.2.RELEASE'
    compile 'org.xerial:sqlite-jdbc:3.25.2'
    testCompile 'org.springframework.boot:spring-boot-starter-test:2.1.2.RELEASE'
    compileOnly 'org.springframework.boot:spring-boot-starter-tomcat:2.1.2.RELEASE'
}

group = 'com.booking'
version = '0.0.1-SNAPSHOT'
description = 'react-booking'
sourceCompatibility = '1.8'

publishing {
    publications {
        maven(MavenPublication) {
            from(components.java)
        }
    }
}

tasks.withType(JavaCompile) {
    options.encoding = 'UTF-8'
}
